<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFFFF" /> <!-- white background -->

    <!-- Border stroke -->
    <stroke
        android:width="2dp"
        android:color="#4CAF50" /> <!-- green border -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Padding inside EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
